doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/css/style.css")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css", rel="stylesheet")
  body
    // Navigation Bar (only if user is logged in)
    if user
      nav.navbar
        .nav-container
          .nav-logo(onclick="window.location.href='/'") RaddiWala
          .nav-menu
            if user.role === 'customer'
              a.nav-link(href="/customer/dashboard") Dashboard
              a.nav-link(href="/customer/sell-scrap") Sell Scrap
              a.nav-link(href="/customer/pending-pickups") My Requests
              a.nav-link(href="/customer/completed-pickups") History
              a.nav-link(href="/customer/profile") Profile
            else if user.role === 'raddiwala'
              a.nav-link(href="/raddiwala/dashboard") Dashboard
              a.nav-link(href="/raddiwala/ongoing-requests") Browse Requests
              a.nav-link(href="/raddiwala/pending-pickups") My Pickups
              a.nav-link(href="/raddiwala/completed-pickups") History
              a.nav-link(href="/raddiwala/subscription") Premium
              a.nav-link(href="/raddiwala/profile") Profile
            .nav-user
              a.nav-link(href="#", onclick="confirmLogout()") Logout

    // Main Content
    main.main-content
      // Hero Section
      section.hero
        .container
          .hero-content
            h1.hero-title Welcome to RaddiWala
            p.hero-subtitle Connecting You with Scrap Collectors for a Greener Tomorrow
            p.hero-description Transform your waste into value while contributing to environmental sustainability. RaddiWala makes it easy to sell your scrap materials to verified collectors in your area.

          if !user
            .hero-actions
              a.btn.btn-primary(href="/signup") Get Started
              a.btn.btn-secondary(href="/login") Login
          else
            .hero-actions
              if user.role === 'customer'
                a.btn.btn-primary(href="/customer/dashboard") Go to Dashboard
                a.btn.btn-secondary(href="/customer/sell-scrap") Sell Scrap Now
              else
                a.btn.btn-primary(href="/raddiwala/dashboard") Go to Dashboard
                a.btn.btn-secondary(href="/raddiwala/ongoing-requests") Browse Requests

      // Features Section
      section.features
        .container
          h2.section-title How RaddiWala Works
          .features-grid
            .feature-card
              .feature-icon
                i.fas.fa-camera
              h3 Upload Photos
              p Take photos of your scrap materials and specify the type and approximate weight

            .feature-card
              .feature-icon
                i.fas.fa-gavel
              h3 Receive Bids
              p Local scrap collectors will bid on your materials with competitive prices

            .feature-card
              .feature-icon
                i.fas.fa-handshake
              h3 Accept & Schedule
              p Choose the best offer and schedule a convenient pickup time

            .feature-card
              .feature-icon
                i.fas.fa-truck
              h3 Doorstep Pickup
              p Professional collectors arrive at your location for hassle-free pickup

            .feature-card
              .feature-icon
                i.fas.fa-star
              h3 Rate & Review
              p Complete the transaction and rate your experience for future reference

            .feature-card
              .feature-icon
                i.fas.fa-shield-alt
              h3 Secure Payments
              p Safe and transparent payment processing with verified collectors

      

      // Environmental Impact Section
      section.environmental-impact
        .container
          h2.section-title Our Environmental Impact
          .environmental-grid
            .environmental-card
              .stat-number 10,000+
              .stat-label KG Scrap Diverted from Landfills
              .stat-description Every kilogram collected is waste kept out of open dumps and given a new life through recycling.
            .environmental-card
              .stat-number 5,000+
              .stat-label KG COâ‚‚ Emissions Avoided
              .stat-description Recycling scrap metal, paper, and plastic prevents the massive emissions that would have been released if they were newly manufactured.
            .environmental-card
              .stat-number 200+
              .stat-label Trees Preserved
              .stat-description By recycling paper waste alone, we save trees from being cut down, keeping green cover intact.

      // Call to Action
      if !user
        section.cta
          .container
            .cta-content
              h2 Ready to Make a Difference?
              p Join thousands of users who are already contributing to a cleaner environment
              .cta-actions
                a.btn.btn-primary.btn-large(href="/signup") Sign Up Now
                a.btn.btn-primary.btn-large(href="/login") Login

    // Footer
    footer.footer
      .container
        .footer-bottom
          p
          p &copy; 2025 Shail K Patel &middot; Crafted out of boredom.
            a(href="https://github.com/ShailKPatel/Raddiwala", target="_blank", rel="noopener noreferrer") GitHub Repo
            span &middot; MIT License

    script(src="/js/main.js")
    script.
      function confirmLogout() {
        if (confirm('Are you sure you want to logout?')) {
          window.location.href = '/logout';
        }
      }
